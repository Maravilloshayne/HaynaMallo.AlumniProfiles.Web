@model Hayna.AlumniProfileEntries.Web.Areas.ViewModels.Alumni.CreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Alumni Profiles Entries</h2>



<div class="row">
    <div class="hero-unit">
        <form action="~/manage/alumniprofiles/create" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="Company">Company:</label>
                <input type="text" class="form-control" name="Company" />
            </div>
            <div class="form-group">
                <label for="Position">Position</label>
                <textarea class="form-control" rows="8" name="Position">
                </textarea>
            </div>

            <div class="form-group">
                <label for="Location">Location</label>
                <textarea class="form-control" rows="8" name="Location">
                </textarea>
            </div>

            <div class="form-group">
                <label for="Description">Description</label>
                <textarea class="form-control" rows="8" name="Description">
                </textarea>
            </div>
            <div class="form-group">
                <label for="FromDate">FromDate</label>
                <textarea class="form-control" rows="8" name="FromDate">
                </textarea>
            </div>

            <div class="form-group">
                <label for="ToDate">ToDate</label>
                <textarea class="form-control" rows="8" name="ToDate">
                </textarea>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="~/manage/alumniprofiles/index" class="btn btn-danger">Cancel</a>
        </form>
    </div>
</div>
